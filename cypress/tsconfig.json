{
  "compilerOptions": {
    "outDir": "../built",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "baseUrl": "../node_modules",
    "jsx": "react",
    "types": ["cypress", "external"],
    "typeRoots" : ["../types"]
  },
  "include": ["**/*"]
}
