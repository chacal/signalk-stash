{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "cypress"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
